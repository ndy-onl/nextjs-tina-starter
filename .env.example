# MongoDB Connection String (from your Coolify service or MongoDB Atlas)
MONGO_URI=

# GitHub Personal Access Token (PAT) with repo scope
# See: https://docs.github.com/en/authentication/keeping-your-account-and-data-secure/managing-your-personal-access-tokens
GITHUB_PERSONAL_ACCESS_TOKEN=

# The owner of the repository where the content is stored
GITHUB_OWNER=ndy-onl

# The name of the repository where the content is stored (e.g., your final website repo)
GITHUB_REPO=

# The branch where content changes should be committed
GITHUB_BRANCH=main

# A secret key for signing authentication tokens. Generate one with `openssl rand -hex 32`
NEXTAUTH_SECRET=

# Set to true for local development, false for production
TINA_PUBLIC_IS_LOCAL=true

# The following are not needed for self-hosting but are part of the TinaCMS config
NEXT_PUBLIC_TINA_CLIENT_ID=
TINA_TOKEN=